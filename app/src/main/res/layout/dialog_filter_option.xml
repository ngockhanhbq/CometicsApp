<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TableRow
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cosmetics Shop"
                android:layout_marginStart="12dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/gray_orange"
                android:textSize="28sp" />

            <ImageView
                android:src="@drawable/bg_splash_shoe"
                android:layout_width="64dp"
                android:layout_height="64dp"/>
        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Option Filter"
            android:layout_gravity="center"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="10dp"/>

        <TableRow
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_price_reduce"
                android:layout_marginStart="10dp"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Giá giảm dần"
                android:layout_weight="1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"
                android:background="@drawable/custom_button_login"
                android:layout_gravity="start"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/tv_price_advance"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Giá tăng dần"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"
                android:background="@drawable/custom_button_login"
                android:layout_gravity="start"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp" />
        </TableRow>

    </LinearLayout>
</layout>